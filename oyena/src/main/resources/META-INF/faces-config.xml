<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
    <!--
        It should be possible to override a standard component using the
        @FacesComponent annotation. An issue should be filed for this.
        -->
    <component>
        <component-type>javax.faces.HtmlPanelGroup</component-type>
        <component-class>com.manorrock.oyena.component.html.HtmlPanelGroup</component-class>
    </component>
    <!--
        It should be possible to override a standard renderer using the
        @FacesRenderer annotation. An issue should be filed for this.
        -->
    <render-kit>
        <render-kit-id>HTML_BASIC</render-kit-id>
        <renderer>
            <component-family>javax.faces.Panel</component-family>
            <renderer-type>javax.faces.Group</renderer-type>
            <renderer-class>com.manorrock.oyena.renderkit.html.HtmlPanelGroupRenderer</renderer-class>
        </renderer>
    </render-kit>
</faces-config>
